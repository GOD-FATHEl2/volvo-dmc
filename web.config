<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <handlers>
      <add name="PythonHandler" path="*" verb="*" modules="httpPlatformHandler" resourceType="Unspecified"/>
    </handlers>
    <httpPlatform processPath="python"
                  arguments="backend/app.py"
                  stdoutLogEnabled="true"
                  stdoutLogFile=".\python.log"
                  startupTimeLimit="120"
                  requestTimeout="00:04:00">
      <environmentVariables>
        <environmentVariable name="PYTHONPATH" value="D:\home\site\wwwroot\backend;D:\home\site\wwwroot" />
        <environmentVariable name="FLASK_APP" value="backend/app.py" />
        <environmentVariable name="FLASK_ENV" value="production" />
        <environmentVariable name="PORT" value="8000" />
      </environmentVariables>
    </httpPlatform>
  </system.webServer>
</configuration>
